# Configuración del servidor
PORT=3001
NODE_ENV=development

# Base de datos MongoDB
MONGODB_URI=mongodb://elpatio_user:elpatio_password@localhost:27017/elpatio
MONGODB_TEST_URI=mongodb://elpatio_user:elpatio_password@localhost:27017/elpatio_test

# JWT
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
JWT_EXPIRES_IN=24h

# Redis
REDIS_URL=redis://localhost:6379

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3002

# Configuración de pagos
PAYMENT_PROVIDER=mercadopago
MERCADOPAGO_ACCESS_TOKEN=tu_access_token_aqui
MERCADOPAGO_PUBLIC_KEY=tu_public_key_aqui

# Configuración del bot
BOT_TOKEN=tu_bot_token_aqui
BOT_WEBHOOK_URL=https://tu-dominio.com/webhook

# Configuración de salas
MIN_SALA_AMOUNT=1000
MAX_SALA_AMOUNT=100000
SALA_COMMISSION_RATE=0.05

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=logs/backend.log
